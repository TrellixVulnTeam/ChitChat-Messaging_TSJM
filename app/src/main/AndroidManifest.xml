<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chitchat.messaging.chitchatmessaging">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activities.HomeScreenActivity" />
        <activity
            android:name=".activities.ChatListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/register_create_account"
            android:parentActivityName=".activities.HomeScreenActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.UserActivity"
            android:label="@string/user_activity_title"
            android:parentActivityName=".activities.ChatListActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.ChatActivity"
            android:parentActivityName=".activities.ChatListActivity"/>
    </application>

</manifest>