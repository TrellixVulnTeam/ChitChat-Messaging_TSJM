        android:layout_above="@+id/start_email"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_logo"
        android:padding="@dimen/app_logo_padding"/>-->

    <EditText
        android:id="@+id/home_email"
        android:layout_above="@+id/home_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:background="@drawable/inputoutline"
        android:textColor="@color/textColor"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginStart="@dimen/home_layout_margin"
        android:layout_marginEnd="@dimen/home_layout_margin"
        android:layout_marginBottom="@dimen/home_layout_margin" />

    <EditText
        android:id="@+id/home_password"
        android:layout_above="@+id/home_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register_hint_password"
        android:background="@drawable/inputoutline"
        android:textColor="@color/textColor"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginStart="@dimen/home_layout_margin"
        android:layout_marginEnd="@dimen/home_layout_margin"
        android:layout_marginBottom="@dimen/home_layout_margin" />

    <Button
        android:id="@+id/home_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_register_btn"
        android:layout_marginStart="@dimen/home_layout_margin"
        android:layout_marginEnd="@dimen/home_layout_margin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/home_log_in"
        android:textColor="#fff"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/home_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_sign_up"
        android:background="@color/transparentColor"
        android:textColor="#000"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
