<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/settings_top_margin"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/default_profile_picture" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/profile_display_name_margin"
        android:text="@string/display_name"
        android:textAlignment="center"
        android:textColor="@color/profile_text_color"
        android:textSize="@dimen/settings_display_name_size" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="@dimen/profile_status_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/profile_status_margin"
        android:text="@string/default_status"
        android:textAlignment="center"
        android:textColor="@color/profile_text_color"
        android:textSize="@dimen/settings_status_size" />

</RelativeLayout>
