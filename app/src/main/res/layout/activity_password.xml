<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/status_appBar"
        layout="@layout/app_bar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_appBar"
        android:layout_marginStart="@dimen/register_text_margin"
        android:layout_marginEnd="@dimen/register_text_margin"
        android:layout_marginTop="@dimen/register_layout_top_margin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_hint_email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/send_reset_link_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/register_button_margin"
        android:layout_marginEnd="@dimen/register_button_margin"
        android:padding="@dimen/register_btn_padding"
        android:text="@string/send_reset_link"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#fff"
        android:background="@color/colorPrimary" />

</RelativeLayout>
