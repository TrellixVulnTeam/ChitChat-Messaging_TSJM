<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_image"
        android:layout_width="@dimen/card_user_image_size"
        android:layout_height="@dimen/card_user_image_size"
        android:layout_marginBottom="@dimen/card_contact_top_margin"
        android:layout_marginStart="@dimen/card_contact_start_margin"
        android:layout_marginTop="@dimen/card_contact_top_margin"
        android:src="@drawable/default_profile_picture" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/card_contact_start_margin"
        android:layout_marginEnd="@dimen/card_user_end_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/card_name_text_size" />

        <TextView
            android:id="@+id/contact_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_user_status_top_margin"
            android:maxLines="1"
            android:textSize="@dimen/card_status_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/contact_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/card_status_text_size"
        android:layout_marginTop="@dimen/card_contact_start_margin"
        android:layout_marginEnd="@dimen/card_contact_start_margin" />

    <TextView
        android:id="@+id/contact_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send_btn_background"
        android:layout_below="@id/contact_time"
        android:layout_alignEnd="@+id/contact_time"
        android:layout_marginTop="@dimen/card_user_status_top_margin"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"
        android:gravity="center"/>

</RelativeLayout>