<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/card_user_image_size"
        android:layout_height="@dimen/card_user_image_size"
        android:layout_marginBottom="@dimen/card_user_image_margin"
        android:layout_marginStart="@dimen/card_user_text_margin"
        android:layout_marginTop="@dimen/card_user_image_margin"
        android:src="@drawable/default_profile_picture" />

    <TextView
        android:id="@+id/users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_image"
        android:layout_toEndOf="@+id/user_image"
        android:layout_marginStart="@dimen/card_user_text_start_margin"
        android:layout_marginEnd="@dimen/card_user_text_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/card_name_text_size" />

    <TextView
        android:id="@+id/users_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/users_name"
        android:layout_below="@+id/users_name"
        android:layout_marginEnd="@dimen/card_user_text_margin"
        android:textSize="@dimen/card_status_text_size" />

</RelativeLayout>